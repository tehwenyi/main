<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         title="ePiggy" minWidth="750" minHeight="600" onCloseRequest="#handleExit">
    <icons>
        <Image url="@/images/address_book_32.png"/>
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>

            <VBox>
                <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
                    <Menu mnemonicParsing="false" text="File">
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="How To Use">
                        <MenuItem fx:id="helpMenuItem" mnemonicParsing="false"
                                  onAction="#handleHelp" text="User Manual"/>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Report">
                        <MenuItem fx:id="summaryMenuItem_daily" mnemonicParsing="false"
                                  onAction="#handleDailyReport"
                                  text="Daily Report"/>
                        <MenuItem fx:id="summaryMenuItem_monthly" mnemonicParsing="false"
                                  onAction="#handleMonthlyReport"
                                  text="Monthly Report"/>
                        <MenuItem fx:id="summaryMenuItem_yearly" mnemonicParsing="false"
                                  onAction="#handleYearlyReport"
                                  text="Yearly Report"/>
                        <MenuItem fx:id="summaryMenuItem_percentage" mnemonicParsing="false"
                                  onAction="#handlePercentageReport"
                                  text="Percentage Report"/>
                    </Menu>
                </MenuBar>

                <StackPane VBox.vgrow="NEVER" fx:id="commandBoxPlaceholder" styleClass="pane-with-border">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <StackPane VBox.vgrow="NEVER" fx:id="resultDisplayPlaceholder" styleClass="pane-with-border"
                           minHeight="100" prefHeight="100" maxHeight="100">
                    <padding>
                        <Insets top="5" right="10" bottom="5" left="10"/>
                    </padding>
                </StackPane>

                <SplitPane id="splitPane" fx:id="splitPane" dividerPositions="0.4" VBox.vgrow="ALWAYS">
                    <VBox fx:id="personList" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <StackPane fx:id="personListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <VBox fx:id="expenseList" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <StackPane fx:id="expenseListPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <VBox fx:id="budgetList" minWidth="340" prefWidth="340" SplitPane.resizableWithParent="false">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <StackPane fx:id="budgetPanelPlaceholder" VBox.vgrow="ALWAYS"/>
                    </VBox>

                    <StackPane fx:id="browserPlaceholder" prefWidth="340">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </StackPane>
                </SplitPane>

                <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER"/>
            </VBox>
        </Scene>
    </scene>
</fx:root>
